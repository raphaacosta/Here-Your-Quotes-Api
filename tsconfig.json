{
  "compilerOptions": {    
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "ES6",
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"]
    }
  },
  "include": [
    "src/**/*",
  ],
}
